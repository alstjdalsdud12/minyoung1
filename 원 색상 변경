  Widget createS5() {
    return Center(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          AnimatedOpacity(
            duration: const Duration(milliseconds: 1000),
            opacity: opacity ? 0.2 : 1,
            child: Container(
              width: 150,
              height: 150,
              decoration: const BoxDecoration(
                shape: BoxShape.circle,
                color: Colors.blue,
              ),
              child: const Center(
                child: Text(
                  '안녕하세요',
                  style: TextStyle(color: Colors.white, fontSize: 20),
                ),
              ),
            ),
          ),
          ElevatedButton(
            onPressed: () {
              opacity = !opacity;
              setState(() {});
            },
            child: const Text('투명하게'),
          ),
        ],
      ),
    );
  }
